<Window x:Class="改元ユニコーン.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:改元ユニコーン"
        mc:Ignorable="d"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="改元ユニコーン" SizeToContent="WidthAndHeight" ResizeMode="NoResize" ContentRendered="Window_ContentRendered" Closing="Window_Closing" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="5">
        <TextBlock Margin="3" Text="改元の日付を指定"/>
        <DatePicker x:Name="datePicker1" Margin="3" SelectedDateFormat="Long" SelectedDate="2019/5/1"/>
		<CheckBox x:Name="PauseCheckBox" Content="勝利前に一時停止する" Margin="3" IsChecked="True"/>
		<Button x:Name="startButton" DockPanel.Dock="Left" Height="30" Width="25" Margin="3" IsEnabled="False" Click="StartButton_Click">
			<Polygon Points="0,0 0,20 17.3,10" Fill="Lime" Stroke="Black" StrokeThickness="1" x:Name="PlayIcon" IsEnabledChanged="PlayIcon_IsEnabledChanged"/>
		</Button>

	</StackPanel>
</Window>
